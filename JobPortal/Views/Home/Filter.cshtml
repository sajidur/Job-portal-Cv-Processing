@section Scripts
    {

    <script src="~/js/jquery-2.2.4.js"></script>

    <script>
        $(document).ready(function() {
            $("select").change(function () {
                var stId = $("#jobCategory").val();
                var skill = $("#Skills").val();
                var location = $("#Location").val();
                alert(stId);
                //$("#myData").empty();
                var json = { jobCategory: stId,skills:skill,location:location};
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetFIlterJsonResult", "Home")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(json),
                    success: function (data) {
                        //alert(data);
                        //alert(JSON.stringify(data))
                        if (data.success)
                            alert("Success");
                        
                        
                        $.each(data, function (index, value) {
                            //alert(value.Name);
                            var row = $(" <tr><th scope='row'>1</th><td>" + value.name + "</td><td>" + value.email + "</td><td>" + value.phone +""+ 
                                "<td><i class=mdi mdi-checkbox-blank-circle text-success></i>No Filter</td><td>" + value.summary + "</td></td><td><i class='mdi mdi-file-pdf' style='font-size: 25px;color: #d43434;'></i>Resume</td> </tr>");
                            $("#myData").append(row);
                            var row2 = $("<tr><td style='border: 1px solid black; padding: 5px 10px;'>" + value.Code + "</td><td style='border: 1px solid black; padding: 5px 10px;'>" + value.Name + "</td><td style='border: 1px solid black; padding: 5px 10px;'>" + value.Grade + "</td></tr>");
                            $("#myDataPrint").append(row2);

                        });
                    }
                });

            });

        });
    </script>

}
